        <div style="line-height:20%;">
        <br>
        </div>
        <input type="submit" value="Search" id="submit" onsubmit="loadData();tableContent();filter_genre();">


    </form>
    <h2> Popular City Searches </h2>

      <div class="cities_list">
        <!-- Loop through quotes -->
        <% var i = 0;
        var cities_to_print = [];
        var count = 0;
        while (i < data.cities.length) {
          if (data.cities[i].City != "" ) {
              for (var j = 0; j < 5; j++) {
                  if(cities_to_print[j]  != data.cities[i].City) {
                      cities_to_print[count] = data.cities[i].City;
                      break;
                  }
                  break;
              }
              count++
          }
          i++;
        }
        %>
        <span>
          <p class="cities">
        <% for (var i = 0; i < 5; i++) {%>

          <!-- Output name from the iterated quote object -->
            <%=cities_to_print[i] %>
            &nbsp &nbsp &nbsp
          <% } %>
            </p>
          </span>
      </div>

    </div>
